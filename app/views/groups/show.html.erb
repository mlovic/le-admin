<p id="notice"><%= notice %></p>

<h2><%= @group.name %></h2>

<p>
  <strong>Level:</strong>
  <%= @group.level %>
</p>

<h3>Tests</h3>
<% @group.tests %>
  
<%# TODO make partial %>

<% TestBook.where(level: @group.level).each do |book| %>
  <h4><%= book.name %></h4>
  <ul>
  <% book.tests.each do |test| %>
    <li>
      <%= link_to test_title(test), test_path(test), class: 'test-link' %>
      <% if test.given_to?(@group) %>
        <span class="glyphicon glyphicon-ok"></span>
        <span class="test-date">(<%= test.given_on(@group).strftime('%b %e') %>)</span>
      <% end %>
    </li>
  <% end %>
  </ul>
<% end %>






